                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Test Information</h6>
                                </div>
                                <div class="card-body">

                                    <table class="table table-bordered" width="100%" cellspacing="0">
                                        <tr>
                                            <th>Order Number</th>
                                            <td>
                                                <%= records.OrderNumber %>
                                            </td>
                                        </tr>

                                        <tr>
                                            <th>Test Type</th>
                                            <td>
                                                <%= records.TestType %>
                                            </td>
                                        </tr>


                                        <tr>
                                            <th>Time Slot</th>
                                            <td>
                                                <%= records.TestTimeSlot %>
                                            </td>
                                        </tr>

                                        <tr>
                                            <th>Report Status</th>
                                            <% if (!records.ReportStatus){ %>
                                                <td>Not yet Processed yet</td>
                                                <% } else{ %>
                                                    <td>
                                                        <%= records.ReportStatus %>
                                                    </td>
                                                    <% } %>
                                        </tr>


                                        <tr>
                                            <% if (records.AssigntoName){ %>
                                                <th>Assign To</th>
                                                <td>
                                                    <%= records.AssigntoName %> - <% records.AssignedtoEmpId %>
                                                </td>
                                        <tr>
                                            <th>Assigned Date</th>
                                            <td>
                                                <%= records.AssignedTime %>
                                            </td>
                                        </tr>

                                        <% } %>

                                            </tr>
                                            <tr>

                                                <% if (records.FinalReport){ %>
                                                    <th>Report</th>

                                                    <td><a href="reportfiles/<%= records.FinalReport %>"
                                                            target="_blank">Download</a></td>

                                            <tr>
                                                <th>Report Delivered Time</th>
                                                <td>
                                                    <%= records.ReportUploadTime %>
                                                </td>
                                            </tr>

                                            <% } %>
                                                </tr>

                                    </table>

                                    <% if(!records.AssignedtoEmpId){ %>
                                        <div class="form-group">
                                            <button type="button" class="btn btn-info btn-sm" data-toggle="modal"
