    <script type="text/javascript">

        //For report file
        $('#reportfile').hide();
        $(document).ready(function () {
            $('#status').change(function () {
                if ($('#status').val() == 'Delivered') {
                    $('#reportfile').show();
                    jQuery("#report").prop('required', true);
                }
                else {
                    $('#reportfile').hide();
                }

            })
        }) 
    </script>
