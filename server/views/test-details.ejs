                                        </div>
                                        <% } else { %>

                                          <%  var rstatus = records.ReportStatus  %>

                                                
                                                <button type="button" class="btn btn-info btn-sm" data-toggle="modal"
                                                    data-target="#takeaction">Take Action</button>


                                                <% } %>



